# =============================================================================
# AI Learning Companion - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# App Settings
APP_NAME=AI Learning Companion
DEBUG=false

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./learning.db

# =============================================================================
# OpenRouter AI Configuration
# =============================================================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model (free tier available)
PRIMARY_MODEL=openrouter/nvidia/nemotron-3-nano-30b-a3b:free

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# Use "*" for development, specify domains for production
CORS_ORIGINS=*
